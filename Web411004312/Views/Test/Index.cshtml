
@{
    ViewBag.Title = "Index";
}
<h1>你好</h1>
<h2>hello</h2>
@using (Html.BeginForm("Index", "Test", FormMethod.Post))
{
<div>
    帳號:
    @Html.TextBox("account")
    <br />
    密碼:
    @Html.Password("password")
    <br />
    年齡:
    @Html.TextBox("age")
    <br />
    性別:
    @Html.RadioButton("gender", "A")男生
    @Html.RadioButton("gender", "B")女生
    <br />
    興趣:
    @Html.CheckBox("reading", "A")看書
    @Html.CheckBox("playing", "B")打遊戲
    <br />
    關於我:
    @Html.TextArea("about")
</div>
}

@{

    var message = "Hi";
    var isstudent = true;
}

<p>@message</p>
<p>@DateTime.Now</p>

@if (isstudent)
{
    <p>是學生</p>
}
else
{
    <p>不是學生</p>
}

@for (int i = 1; i <= 10; i++)
{
    <p>@i</p>
}